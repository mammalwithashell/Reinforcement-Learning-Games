#:set dot_size 30
#:set dot_right_bound .95
#:set dot_left_bound .05



<DotsAndBoxesScreen>:
    id: d&b_screen
    game_grid: game_grid
    scoreboard: scoreboard
    user_data: user_data
    ai_data: ai_data
    dots: [dot0, dot1, dot2, dot3, dot4, dot5, dot6, dot7, dot8]
    GridLayout:
        cols: 1
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 100
            Button:
                text: "Menu"
                on_press: root.menu()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Difficulty Setting: " + root.difficulty_setting
                Label:
                    text: "Your Score: " + str(root.score)
                Label:
                    text: "AI Score: " + str(root.ai_score)
                Label:
                    text: "Your Piece is " + root.piece
            Button:
                text: "Restart Game"
                on_press: root.restart()

        
        
        GridLayout:
            id: game_grid
            rows: 3
            padding: [10, 10, 10, 10]
            spacing: [10, 10]
            GridLayout:
                id:row2
                rows:1
                Image:
                    id: dot6
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]6[/color]"
                        pos: self.parent.center
                        markup: True
                    
                Image:
                    id: dot7
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]7[/color]"
                        pos: self.parent.center
                        markup: True

                Image:
                    id: dot8
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]8[/color]"
                        pos: self.parent.center
                        markup: True

            GridLayout:
                id:row1
                rows:1
                Image:
                    id: dot3
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]3[/color]"
                        pos: self.parent.center
                        markup: True


                Image:
                    id: dot4
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]4[/color]"
                        pos: self.parent.center
                        markup: True

                Image:
                    id: dot5
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]5[/color]"
                        pos: self.parent.center
                        text_color:
                        markup: True
            GridLayout:
                rows:1
                id: row0
                Image:
                    id: dot0
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]0[/color]"
                        pos: self.parent.center
                        markup: True

                Image:
                    id: dot1
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]1[/color]"
                        pos: self.parent.center
                        markup: True

                Image:
                    id: dot2
                    source: "images\dotsandboxes\dot.png"
                    Label:
                        text: "[color=ff3333]2[/color]"
                        pos: self.parent.center
                        markup: True
            
        GridLayout:
            id: scoreboard
            cols: 2
            size_hint_y: None
            height: 50
            Label:
                id: user_data
                text: "Player"
            Label:
                id: ai_data
                text: "AI"
