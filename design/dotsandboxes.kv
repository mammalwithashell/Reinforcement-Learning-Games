<Dot@Ellipse>:
    size: 10, 10

<DotsAndBoxesScreen>:
    id: d&b_screen
    game_grid: game_grid

    GridLayout:
        cols: 1
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 100
            Button:
                text: "Menu"
                on_press: root.menu()
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Difficulty Setting: " + root.difficulty_setting
                Label:
                    text: "Your Score: " + str(root.score)
                Label:
                    text: "AI Score: " + str(root.ai_score)
                Label:
                    text: "Your Turn: " + str(root.turn)
            Button:
                text: "Restart Game"
                on_press: root.setup()
        RelativeLayout:
            id: game_grid
            canvas:
                Ellipse:
                    group: "dot0"
                    pos: int(game_grid.width * .04)-10, int(game_grid.height * .04)-10
                    size: 10, 10
                Ellipse:
                    group: "dot1"
                    pos: int(game_grid.width / 2)-10, int(game_grid.height * .04)-10
                    size: 10, 10
                Ellipse:
                    group: "dot2"
                    pos: int(game_grid.width * .96)-10, int(game_grid.height * .04)-10
                    size: 10, 10
                Ellipse:
                    group: "dot3"
                    pos: int(game_grid.width * .04)-10, int(game_grid.height /2)-10
                    size: 10, 10
                Ellipse:
                    group: "dot4"
                    pos: int(game_grid.width / 2)-10, int(game_grid.height /2)-10
                    size: 10, 10
                Ellipse:
                    group: "dot5"
                    pos: int(game_grid.width * .96)-10, int(game_grid.height /2)-10
                    size: 10, 10
                Ellipse:
                    group: "dot6"
                    pos: int(game_grid.width * .04)-10, int(game_grid.height * .96)-10
                    size: 10, 10
                Ellipse:
                    group: "dot7"
                    pos: int(game_grid.width / 2)-10, int(game_grid.height * .96)-10
                    size: 10, 10
                Ellipse:
                    group: "dot8"
                    pos: int(game_grid.width * .96)-10, int(game_grid.height * .96)-10
                    size: 10, 10
                
                # Left Vertical Line
                Line:
                    # x1, y1, x2, y2
                    points: 15.5, 10, 15.5, 380
                    width: 1.5

                # Middle Vertical Line
                Line:
                    # x1, y1, x2, y2
                    points: 245, 10, 245, 380
                    width: 1.5

                # Right Vertical Line
                Line:
                    # x1, y1, x2, y2
                    points: 475, 10, 475, 380
                    width: 1.5

                # Upper Horizontal Line
                Line:
                    # x1, y1, x2, y2
                    points: 15.5, 379, 475, 379
                    width: 1.5

                # Middle Horizontal Line
                Line:
                    # x1, y1, x2, y2
                    points: 15.5, 196, 475, 196
                    width: 1.5

                # Lower Horizontal Line
                Line:
                    # x1, y1, x2, y2
                    points: 15.5, 11, 475, 11
                    width: 1.5


