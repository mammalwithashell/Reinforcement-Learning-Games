<GameButton@ToggleButton>:
    group: "game"
    font_size: 20

# custom widget class and properties
<MatchButton@ToggleButton>:
    group: "match"
    font_size: 20


<DifficultyButton@ToggleButton>:
    group: "difficulty"
    font_size: 20

<TitleScreen>
    id: title_screen
    GridLayout:
        cols: 1
        spacing: 30, 10
        padding: 10, 10
        Label: 
            id: game_label
            text: "Games"
            font_size: 30
        GridLayout:
            cols: 3
            # spacing_x, spacing_y
            spacing: 10, 10
            GameButton:
                id: ttt
                text: "Tic-Tac-Toe"
                on_press: title_screen.game_choice = "" if self.state == "normal" else self.text
            GameButton:
                id: c4
                text: "Connect 4"
                on_press: title_screen.game_choice = "" if self.state == "normal" else self.text
            GameButton:
                id: db
                text: "Dots and Boxes"
                on_press: title_screen.game_choice = "" if self.state == "normal" else self.text
        Label: 
            id: match_label
            text: "Match Type"
            font_size: 30
        GridLayout:
            cols: 2
            spacing: 10, 10
            MatchButton:
                text: "Single Match"
                on_press: title_screen.match_style = "" if self.state == "normal" else self.text
            MatchButton:
                text: "League Match"
                on_press: title_screen.match_style = "" if self.state == "normal" else self.text

        Label:
            id: diff
            text: "Difficulty"
            font_size: 30
        GridLayout:
            cols: 3
            spacing: 10, 10
            DifficultyButton: 
                text: "Easy"
                on_press: title_screen.diff_choice = "" if self.state == "normal" else self.text
            DifficultyButton: 
                text: "Medium"
                on_press: title_screen.diff_choice = "" if self.state == "normal" else self.text
            DifficultyButton: 
                text: "Hard"
                on_press: title_screen.diff_choice = "" if self.state == "normal" else self.text
        Button:
            text: "Play Game"
            font_size: 30
            on_press: root.load_game()
            
<RootWidget>:
    TitleScreen:
        name: "title"
    TicTacToeScreen:
        name: "Tic-Tac-Toe"
    Connect4Screen:
        name: "Connect 4"
    DotsAndBoxesScreen:
        name: "Dots and Boxes"