<TicTacToeScreen>:
   main_menu: main_menu
   scorebox: scorebox
   exit_button: exit_button

   square_list: [ square1, square2, square3, square4, square5, square6, square7, square8, square9]
   GridLayout:
      rows: 3
      size: root.width, root.height
      spacing: 20, 10
      padding: 10, 10
      GridLayout:
         rows: 1
         size_hint_y: None
         height: 100
         spacing: 10
         Button:
            id: main_menu
            text: "Menu"
            font_size: 50
            on_press: root.press_main()         
         Label:
            id: scorebox
            text: ""
            font_size: 20         
         Button:
            id: exit_button
            text: "Reset"
            font_size: 50
            on_press: root.reset_game()

      GridLayout:
         cols:3
         canvas.before:
            Rectangle:
               pos: self.pos
               size: self.size
               source: "images\tictactoe\white.png"
               
         TicTacToeSquare:
            id: square1
            button_number: 1
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square2
            button_number: 2
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square3
            button_number: 3
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square4
            button_number: 4
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square5
            button_number: 5
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square6
            button_number: 6
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square7
            button_number: 7
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square8
            button_number:8
            font_size: 50
            on_press: root.press(self.button_number)

         TicTacToeSquare:
            id: square9
            button_number: 9
            text: "Monkey"
            font_size: 50
            on_press: root.press(self.button_number)

