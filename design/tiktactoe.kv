<TicTacToeScreen>:
    canvas.before:
        # used to set the background color
        Color:
            rgba: (1,1,1,1)
        Ellipse:
            pos: 100, 100
            size: 200, 201
            angle_start: 0
            angle_end: 360
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                # x1, y1, x2, y2
                points: 50, 50, 50, 1000
                width: 2
            Color:
                rgba: 50, 0, 0, 1
            Line:
                points: 100, 50, 100, 1000
                width: 2

